{
  "name": "@reactopia/svg-animator",
  "version": "0.0.5",
  "description": "Professional SVG text animation library with React support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "test": "jest",
    "lintx": "eslint src --ext .ts,.tsx",
    "lint": "tsc --noEmit",
    "release": "pnpm run build && changeset publish",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "author": "Yash Mahajan",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "SVG",
    "animation",
    "text animation",
    "React",
    "SVG animation",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/YashM20/svg-animator.git"
  },
  "homepage": "https://github.com/YashM20/svg-animator",
  "bugs": {
    "url": "https://github.com/YashM20/svg-animator/issues"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}